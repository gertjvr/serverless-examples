{
  "compileOnSave": false,
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "lib": [
          "es2015",
          "es2016",
          "es2017"
      ],
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "skipLibCheck": true
  }
}
